extends layout.pug

block content
  .container.mt-5
    h1 File Details

    if file
      // File Name
      h3.mt-4 #{file.fileName}

      // File Metadata
      p.text-muted File Size: #{file.size} KB
      p.text-muted Uploaded on: #{file.createdAt.toDateString()}

      // Action Buttons (optional)
      .mt-4.d-flex
        // Download Button
        a.btn.btn-primary.btn-sm.mr-2(href=`/files/${file.id}/download`) Download

        // Delete Form Button
        form(action=`/files/${file.id}?_method=DELETE` method="POST" onsubmit="return confirm('Are you sure you want to delete this file?')")  
          button.btn.btn-danger.btn-sm(type="submit") Delete

    else
      .alert.alert-warning.mt-4
        h4 File not found
        p The file you are looking for does not exist or you do not have permission to view it.
