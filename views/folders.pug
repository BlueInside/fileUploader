extends layout.pug

block content
  .container.mt-5
    h1 Your Folders

    if folders.length > 0
      .list-group
        each folder in folders
          .list-group-item
            h3 #{folder.name}
            p Created at: #{folder.createdAt.toLocaleString()}
            a.btn.btn-primary(href=`/folders/${folder.id}`) View Folder
            a.btn.btn-danger(href=`/folders/${folder.id}/delete` onclick="return confirm('Are you sure you want to delete this folder?')") Delete Folder

    else
      .alert.alert-info.mt-4
        h4 No folders found
        p You haven't created any folders yet.
        p To start uploading files, please create your first folder.

      // Link to create new folder
      a.btn.btn-primary(href="/folders/new") Create Folder
